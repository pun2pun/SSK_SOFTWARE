<html>

<head>
    <title>Admin : Management </title>
    <!-- load bootstrap css -->
    <link rel="stylesheet" href="./bootstrap-4.4.1-dist/css/bootstrap.css">
    <!-- load fontawesome -->
    <link href="https://fonts.googleapis.com/css?family=Kanit&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    
</head>

<body style="font-family:  'Kanit', sans-serif;">

    <nav class="navbar navbar-expand-lg navbar-light bg-pink">

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            MENU
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="/admin_home">หน้าแรก</a>
            <a class="dropdown-item" href="/manage">จัดการข้อมูล</a>
          </div>
        </li>
      
      </ul>
 
    </div>
  </nav>

<!--------------------------------------------------------------- Main choice  ---------------->

  <div class="container" style="width: 1000px;margin-top: 50px; border: 1px solid #a8a6a6;">

    

    

    <table class="table" style="margin-top: 20px;margin-bottom: 50px;" >
        <thead >
          <tr>
            <th scope="col">ลำดับ</th>
            <th scope="col">ชื่อโครงการ</th>
            <th scope="col">จำนวนงบ</th>
            <th scope="col">ประเภทงบ</th>
            <th scope="col">      </th>
          </tr>
        </thead>
        <tbody style="text-align: right;">
      
        <% var list_project = projectInfo %> 
        <% for(var index = 0; index < list_project.length;index++){%>
       
          <tr>
            <th scope="row" style="text-align: left;"><%= index+1 %> </th>
            <td style="text-align: left;"><%=  list_project[index].name_project %></td>
            <td style="text-align: left;"><%=  (list_project[index].Budget.total_budget*1).toLocaleString('es') %></td>
            <td style="text-align: left;"><%=   list_project[index].Budget_type %></td>
            <% var link = "storeFile/"+list_project[index].name_project+".docx" %> 
            <td> 
              <form action="/projectDetail" method="POST">
                <td> 
                  <input type="hidden" name="name_project"  id="name_project" value="<%= list_project[index].name_project %>">
                  <button class="btn btn-info" type="submit" >view</button>
                </td>
              </form
             
            </td>
          </tr>
        <% } %> 
         
        </tbody>
      </table>

      
    </div>
</div>


